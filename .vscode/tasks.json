{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: g++.exe build active file",
			"command": "D:\\MinGW\\bin\\g++.exe",
			"args": [
				// "-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-O0",
				"-lm",
				"-Wall",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "D:\\MinGW\\bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}